{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "os:default",
    "barcode-scanner:default",
    "fs:default",
    "fs:allow-appconfig-write",
    "fs:allow-appconfig-read",
    "fs:allow-appconfig-meta",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPCONFIG/*" },
        { "path": "$APPCONFIG/.secret.txt" }
      ]
    }
  ]
}
